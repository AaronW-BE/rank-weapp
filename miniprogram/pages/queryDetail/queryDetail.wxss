page{
    height: 100%;
}

view{
    width: 100%;
}


.container{
    height: 100%;
    display: flex;
    flex-direction: column;
    flex: 1;
}

.header{
    text-align: center;
    background-color: #74b9ff;
    height: 400rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    color: #fff;
}

.body{
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, #74b9ff, #EC6EAD);
}
.title{
    font-size: 35rpx;
}
.rank-value{
    font-size: 70rpx;
}

.rank-wrapper .cell-item:nth-child(even){
    background: rgba(52, 147, 230, 0.322);
}

.top-title{
    font-weight: bolder;
    font-size: 45rpx;
}

/* .rank-wrapper:nth-child(odd){
    background: #3494E666;
} */

.cell-item{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding: 20rpx;
    text-align: center;
    color: #fff;
}

.cell-item .index{
    flex: 1;
}
.cell-item .name{
    flex: 5;
}
.cell-item .credit{
    flex: 3;
}

.underline{
    border-bottom: 1rpx solid #cccccc;
}